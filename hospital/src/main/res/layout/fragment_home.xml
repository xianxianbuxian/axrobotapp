<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/ivBt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/ivMainTabImg"
                    android:src="@drawable/hospital"/>

                <TextView
                    style="@style/homeFrgText"
                    android:text="医院介绍"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ivBt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true"


            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/ivMainTabImg"
                    android:src="@drawable/doctor"/>

                <TextView
                    style="@style/homeFrgText"
                    android:text="专家门诊"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ivBt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    style="@style/ivMainTabImg"
                    android:src="@drawable/diagnosis"/>

                <TextView
                    style="@style/homeFrgText"
                    android:text="问诊导航"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/ivBt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    style="@style/ivMainTabImg"
                    android:src="@drawable/smart_dia"/>


                <TextView
                    style="@style/homeFrgText"
                    android:text="智能诊断"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/ivBt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/ivMainTabImg"
                    android:src="@drawable/health"/>

                <TextView
                    style="@style/homeFrgText"
                    android:text="健康咨询"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ivBt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    style="@style/ivMainTabImg"
                    android:src="@drawable/process"/>


                <TextView
                    android:id="@+id/textView2"
                    style="@style/homeFrgText"
                    android:text="办事流程"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ivBt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    style="@style/ivMainTabImg"
                    android:src="@drawable/care"/>

                <TextView
                    style="@style/homeFrgText"
                    android:text="保健知识"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/ivBt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/colorBackGround"
            card_view:cardCornerRadius="25px"
            card_view:cardElevation="25px"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    style="@style/ivMainTabImg"
                    android:src="@drawable/service"/>


                <TextView
                    style="@style/homeFrgText"
                    android:text="服务评价"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>




    </LinearLayout>


</LinearLayout>