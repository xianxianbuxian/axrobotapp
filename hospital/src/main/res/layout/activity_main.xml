<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/mian"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fitsSystemWindows="true"
              android:orientation="vertical">


    <include layout="@layout/head"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/tabbar_divide_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:background="@color/colorWhite"
        android:orientation="horizontal">

        <!--<ImageView-->
        <!--style="@style/ivMainTabImg"-->
        <!--android:id="@+id/ivHome"-->

        <!--android:src="@drawable/btn_home_action_1_select"/>-->

        <!--<ImageView-->
        <!--style="@style/ivMainTabImg"-->
        <!--android:id="@+id/ivHospital"-->

        <!--android:src="@drawable/btn_home_action_2_select"/>-->

        <!--<ImageView-->
        <!--style="@style/ivMainTabImg"-->

        <!--android:src="@drawable/btn_home_action_3_select"/>-->

        <!--<ImageView-->
        <!--style="@style/ivMainTabImg"-->

        <!--android:src="@drawable/btn_home_action_4_select"/>-->

        <LinearLayout
            android:id="@+id/layout_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_jiayingzi"
                style="@style/ivMainTabBottom"

                android:src="@drawable/tab_home"/>


            <TextView
                android:id="@+id/tv_jiayingzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20px"
                android:textSize="40sp"
                android:text="首页"
                android:textColor="@color/colorQQBlue"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_hospital"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_tool"
                style="@style/ivMainTabBottom"
                android:src="@drawable/tab_hospital"/>

            <TextView
                android:id="@+id/tv_tool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20px"
                android:text="医院"
                android:textSize="40sp"

                android:textColor="@color/colorQQBlue"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_person"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_discover"
                style="@style/ivMainTabBottom"
                android:src="@drawable/tab_person_center"/>

            <TextView
                android:id="@+id/tv_discover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20px"
                android:textSize="40sp"

                android:text="个人中心"
                android:textColor="@color/colorQQBlue"/>
        </LinearLayout>

        <LinearLayout

            android:id="@+id/layout_more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_me"
                style="@style/ivMainTabBottom"

                android:src="@drawable/tab_more"/>

            <TextView
                android:id="@+id/tv_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:paddingLeft="20px"
                android:text="更多"
                android:textSize="40sp"

                android:textColor="@color/colorQQBlue"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
